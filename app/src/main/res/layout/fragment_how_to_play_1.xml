<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".how.HowToPlayFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="415dp"
        android:layout_height="478dp"
        app:srcCompat="@drawable/sample" />

    <TextView
        android:id="@+id/howTo_play_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="@string/howTo_play_text_1"
        android:textAlignment="center" />

    <Button
        android:id="@+id/next_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_style_of_buttons"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="@string/go_next"
        android:textColor="@color/white"/>
</LinearLayout>